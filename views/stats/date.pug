extend base

block style
    style.
        input, select{
            margin-right: 10px;
        }

        label{
            margin-right: 5px;
        }

block form
    form(method="get")
        select(name="type")
            - let options = { 'day': 'Date', 'month': 'Month', 'year': 'Year' }
            each value, key in options
                option(value=key selected=type===key)= value
        input(name="date" type="date" value=date)
        button(type="submit") OK

block script
    script.
        var ctx = document.getElementById('chart').getContext('2d');
        var chart = new Chart(ctx, {
            type: 'bar',
            data: {
                labels: !{ JSON.stringify(labels) },
                datasets: [{
                    label: '# of Views',
                    data: #{ JSON.stringify(data) },
                    backgroundColor: [
                        'rgba(255, 99, 132, 0.2)',
                        'rgba(54, 162, 235, 0.2)',
                        'rgba(255, 206, 86, 0.2)',
                        'rgba(75, 192, 192, 0.2)',
                        'rgba(153, 102, 255, 0.2)',
                    ],
                    borderColor: [
                        'rgba(255, 99, 132, 1)',
                        'rgba(54, 162, 235, 1)',
                        'rgba(255, 206, 86, 1)',
                        'rgba(75, 192, 192, 1)',
                        'rgba(153, 102, 255, 1)',
                    ],
                    borderWidth: 1
                }]
            },
            options: {
                scales: {
                    yAxes: [{
                        ticks: {
                            beginAtZero: true
                        }
                    }]
                }
            }
        });